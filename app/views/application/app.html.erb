<%= form_tag '#', :id => 'symbol_input_form' do %>
  <%= label_tag "Symbol: " %>
  <%= text_field_tag :symbol %>
  <%= submit_tag "Add Stock" %>
<% end %>

<script type="text/x-handlebars">
  {{#collection contentBinding="Portfolio.quotesController" tagName="ul"}}
    {{content.symbol}} &mdash; {{content.price}}
  {{/collection}}
</script>

<script type="text/x-handlebars" data-template-name="quote-row">
  <tr>
    <td>
      {{symbol}}
    </td>
    <td>
      {{price}}
    </td>
  </tr>
</script>
